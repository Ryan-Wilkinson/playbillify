<div class='page-content'>
  <div class="container white">
		<%= form_for [@organization, @event] do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name, :required => true %>

			<%= f.label :venue %>
			<%= f.text_field :venue, :required => true %>

			<%= f.label :city %>
			<%= f.text_field :city, :required => true %>

			<%= f.label :state %>
			<%= f.select(:state, options_for_select(us_states, "GA"), :required => true) %> 

			<%= f.label :estimated_attendees %>
			<%= f.text_field :estimated_attendees, :required => true %>

			<%= f.label :event_image %>
			<%= f.file_field :event_image %><br>

			<%= f.label "Ad image deadline" %>
			<%= f.date_field :deadline, :required => true %>

			<%= f.label :description %>
			<%= f.text_field :description %>

			<%= f.label 'Event Start Date' %>
			<%= f.date_field :start_date, :required => true %>

			<%= f.label "Event End Date (optional)" %>
			<%= f.date_field :end_date %>

			<%= f.label "Seller Full Names" %>
			<%= f.text_area :sellers %>

			<%= f.submit :class => 'btn waves-effect waves-light'%>
		<% end -%>
	</div>
</div>
<br>
