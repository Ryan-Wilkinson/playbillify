<p id="notice"><%= notice %></p>
<div class="container">
  <h4 class="center"> Your Organizations </h4>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @organizations.each do |organization| %>
        <tr>
          <td><%= organization.name %>'s Events </td>
          <% organization.events.each do |event| %>
          <td><%= event.name %></td>
          <td><%= link_to "more on #{event.name}", organization_event_path(organization, event) %></td>
          <% end %>
          <td><%= link_to 'Show', organization %></td>
          <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
          <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Organization', new_organization_path %>
</div>

